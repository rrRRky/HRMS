                        }
                    ]
                }
                // Add more menu items as per your requirements
            ]
        };

        function createMenuItem(menu) {
            let menuItem = `<li>`;
            menuItem += `<a class="has-arrow" asp-controller="${menu.menucontroller}" href="/${menu.menucontroller}/${menu.menulink}" asp-action="${menu.menulink}"  aria-expanded="false">`;
            if (menu.menuicon) {
                menuItem += `<i class="${menu.menuicon}"></i>`;
            }
            menuItem += `<span class="nav-text">${menu.menuname}</span></a>`;

            if (menu.menuchild && menu.menuchild.length > 0) {
                menuItem += `<ul aria-expanded="false">`;
                menu.menuchild.forEach(subMenu => {
                    menuItem += createMenuItem(subMenu);
                });
                menuItem += `</ul>`;
            }
            menuItem += `</li>`;
            return menuItem;
        }

        function loadMenu() {
            const menuContainer = document.getElementById('menu');
            menuData.sidebar.forEach(menu => {
                if (menu.isvisible) {
                    menuContainer.innerHTML += createMenuItem(menu);
                }
            });
        }

        loadMenu();
    </script>
